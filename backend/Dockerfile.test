# Build stage
FROM eclipse-temurin:21-jammy as build
WORKDIR /workspace/app

# Copy files needed for building
COPY gradlew .
RUN chmod +x ./gradlew
COPY gradle/wrapper/ ./gradle/wrapper/
COPY build.gradle .
COPY src src
COPY config config

# Build the application, skipping tests and checkstyle
RUN ./gradlew build -x test -x checkstyleMain -x checkstyleTest

# Runtime stage
FROM eclipse-temurin:21-jammy
WORKDIR /app

# Install curl for health checks
RUN apt-get update && \
    apt-get install -y curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Copy the JAR from the build stage
COPY --from=build /workspace/app/build/libs/*.jar app.jar

# Start application with test profile
CMD ["java", "-jar", "-Dspring.profiles.active=H2", "app.jar"]